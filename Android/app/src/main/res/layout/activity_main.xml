<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_spring"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textview_ctemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/dovemayo_gothic"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/main_font"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textview_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dovemayo_gothic"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/main_font"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/myshape"
            android:fontFamily="@font/dovemayo_gothic"
            android:gravity="center"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@color/main_font"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageview_model"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/model_image" />

        <Button
            android:id="@+id/button_to_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:fontFamily="@font/dovemayo_gothic"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:minHeight="16dp"
            android:textColor="@color/main_font"
            android:textSize="11sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>